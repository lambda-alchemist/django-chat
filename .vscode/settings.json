{
	"breadcrumbs.enabled": false,
	"telemetry.telemetryLevel": "off",
	"window.menuBarVisibility": "toggle",
	"terminal.integrated.scrollback": 50000,
	"editor.minimap.enabled": false,
	"editor.autoIndent": "advanced",
	"editor.bracketPairColorization.enabled": true,
	"editor.bracketPairColorization.independentColorPoolPerBracketType": true,
	"editor.guides.bracketPairs": false,
	"editor.guides.bracketPairsHorizontal": true,
	"editor.guides.indentation": true,
	"editor.guides.highlightActiveBracketPair": false,
	"editor.guides.highlightActiveIndentation": false,
	"editor.smoothScrolling": true,
	"editor.renderWhitespace": "trailing",
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"editor.fontFamily": "Fira Code",
	"editor.fontLigatures": true,
	"editor.cursorStyle": "line",
	"editor.maxTokenizationLineLength": 50000,
	"files.autoSave": "afterDelay",
	"files.autoSaveDelay": 1,
	"files.eol": "\n",
	"files.encoding": "utf8",
	"files.autoGuessEncoding": true,
	"files.insertFinalNewline": true,
	"files.trimTrailingWhitespace": true,
	"files.trimFinalNewlines": false,
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.confirmUndo": "default",
	"explorer.decorations.badges": true,
	"explorer.decorations.colors": false,
	"explorer.enableDragAndDrop": true,
	"explorer.enableUndo": true,
	"explorer.fileNesting.enabled": false,
	"explorer.fileNesting.expand": false,
	"explorer.fileNesting.patterns": {
		"Cargo.toml": "Cargo.lock",
		"deno.jsonc": "deno.lock",
		"deno.json": "deno.lock",
	},
	"workbench.startupEditor": "none",
	"workbench.preferredDarkColorTheme": "Default Dark+",
	"workbench.productIconTheme": "Default",
	"workbench.colorTheme": "Default Dark+",
	"workbench.iconTheme": "icons",
	"python.analysis.autoImportCompletions": true,
	"python.analysis.autoSearchPaths": true,
	"python.analysis.completeFunctionParens": true,
	"python.analysis.diagnosticMode": "workspace",
	"python.analysis.typeCheckingMode": "basic",
	"python.analysis.inlayHints.functionReturnTypes": false,
	"python.analysis.inlayHints.variableTypes": false,
	"python.analysis.logLevel": "Warning",
	"python.languageServer": "Pylance",
	"python.linting.enabled": true,
	"python.linting.lintOnSave": true,
	"python.formatting.provider": "none",
	"python.envFile": "${workspaceFolder}/.env",
	"python.logging.level": "warn",
	"python.experiments.enabled": false,
	"python.experiments.optInto": ["All"],
	"deno.enable": true,
	"deno.unstable": false,
	"deno.lint": true,
	"deno.codeLens.references": false,
	"deno.codeLens.implementations": true,
	"deno.codeLens.referencesAllFunctions": false,
	"deno.inlayHints.enumMemberValues.enabled": false,
	"deno.inlayHints.functionLikeReturnTypes.enabled": false,
	"deno.inlayHints.propertyDeclarationTypes.enabled": false,
	"deno.inlayHints.variableTypes.enabled": false,
	"deno.inlayHints.parameterTypes.enabled": false,
	"deno.inlayHints.parameterNames.enabled": "none",
	"deno.inlayHints.variableTypes.suppressWhenTypeMatchesName": true,
	"deno.inlayHints.parameterNames.suppressWhenArgumentMatchesName": true,
	"deno.suggest.names": true,
	"deno.suggest.paths": true,
	"deno.suggest.completeFunctionCalls": true,
	"deno.suggest.imports.autoDiscover": true,
	"deno.suggest.autoImports": true,
	"deno.suggest.imports.hosts": {
		"https://deno.land": true,
		"https://x.nest.land": false,
		"https://crux.land": false
	},
	"[json]":            { "editor.defaultFormatter": "denoland.vscode-deno" },
	"[jsonc]":           { "editor.defaultFormatter": "denoland.vscode-deno" },
	"[typescript]":      { "editor.defaultFormatter": "denoland.vscode-deno" },
	"[javascript]":      { "editor.defaultFormatter": "denoland.vscode-deno" },
	"[typescriptreact]": { "editor.defaultFormatter": "denoland.vscode-deno" },
	"[javascriptreact]": {
		"editor.defaultFormatter": "denoland.vscode-deno"
	},
}
